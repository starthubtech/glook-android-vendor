<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EarningsActivity"
        android:padding="@dimen/intro_text_padding">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="209dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:id="@+id/cardView"
            android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toTopOf="@+id/payment_history_recyclerView">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <TextView
                    android:text="@string/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteY="44dp"
                    tools:layout_editor_absoluteX="173dp"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintEnd_toEndOf="@+id/textView10"
                    tools:text="N35000.00"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

            <Button
                    android:text="@string/request_payout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    tools:layout_editor_absoluteY="131dp"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintEnd_toEndOf="@+id/textView11"
                    android:background="@drawable/request_payout_btn"
                    android:textColor="@color/white"
                    android:padding="@dimen/intro_text_padding"
                    android:textAllCaps="false"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <TextView
            android:text="@string/payout_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/payment_history_recyclerView"
            app:layout_constraintBottom_toTopOf="@+id/payment_history_recyclerView"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/payment_history_recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:layout_marginBottom="8dp"
            tools:listitem="@layout/list_item_payment_history"/>
</android.support.constraint.ConstraintLayout>
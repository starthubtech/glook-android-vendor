<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="119dp"
            android:layout_height="115dp"
            android:src="@drawable/home_bg"
            android:id="@+id/circularImageView3"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            tools:text="Emediong Akpan"
            android:textColor="@color/colorPrimary"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_email_tv"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_tv"
            app:layout_constraintEnd_toEndOf="@+id/profile_name_tv"
            app:layout_constraintStart_toStartOf="@+id/profile_name_tv"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="emediongakpan@gmail.com"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/ash_color"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="259dp"
            android:layout_marginBottom="54dp"
            app:layout_constraintBottom_toTopOf="@+id/profile_service_name"/>

    <TextView
            android:text="@string/wallet"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_email_tv"
            app:layout_constraintStart_toStartOf="@+id/profile_email_tv"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wallet_balance_tv"
            tools:text="N1500"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000"
            app:layout_constraintTop_toTopOf="@+id/textView14"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="@+id/profile_email_tv"
            android:layout_marginRight="28dp"/>

    <View
            android:layout_width="3dp"
            android:layout_height="43dp"
            android:id="@+id/view2"
            android:background="@color/ash_color"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/wallet_balance_tv"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView14"
            app:layout_constraintHorizontal_bias="0.384"/>

    <Button
            android:text="@string/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_shop_btn"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:typeface="normal"
            android:background="@color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintHorizontal_bias="0.266"/>

    <TextView
            android:text="Barber Shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_service_name"
            android:drawableLeft="@drawable/ic_profile_home"
            android:drawablePadding="@dimen/mid_padding"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginBottom="382dp"
            app:layout_constraintEnd_toEndOf="@+id/profile_name_tv"
            app:layout_constraintStart_toStartOf="@+id/submit_shop_btn"
            android:layout_marginLeft="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:textSize="18sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_service_address"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/mid_padding"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textStyle="bold"
            tools:text="123 IBB Road Uyo, Akwa Ibom State"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/profile_service_name"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_service_name"/>

</android.support.constraint.ConstraintLayout>